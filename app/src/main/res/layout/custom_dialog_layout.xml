<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_width"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_mesage_dialog"
              android:layout_gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/tab_icon_size"
            android:layout_height="@dimen/tab_icon_size"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_error_red"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/BaseLabelTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="sample title"
            android:textColor="@color/base_color_gray_dark"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/tab_bar_height">

        <ImageView
            android:id="@+id/content_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gallery"/>

        <TextView
            android:id="@+id/tv_message"
            style="@style/BaseLabelTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="sample message sdasdfasdfadfadfsf asdfasdfadfasdfasdfasasdfasdfasdfadfasdasdfasd"
            android:singleLine="false"
            android:textSize="14sp"
            android:textColor="@color/base_color_gray_dark"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_color_dark"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_positive"
            style="@style/DialogButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sample btn"/>
        <View
            android:id="@+id/divider_btn"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/base_color_dark"/>
        <Button
            android:id="@+id/btn_negative"
            style="@style/DialogButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sample btn"/>
        </LinearLayout>


</LinearLayout>