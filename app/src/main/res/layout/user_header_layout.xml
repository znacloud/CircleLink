<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/base_horizontal_margin"
              android:background="@drawable/bg_preference">
    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/header_view_size_small"
        android:layout_height="@dimen/header_view_size_small"
        android:layout_marginRight="@dimen/base_horizontal_margin"
        android:src="@drawable/head_img_default"
        app:riv_corner_radius="@dimen/header_view_corner_radius"
        app:riv_oval="false"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人资料"
            android:textSize="18sp"
            android:textColor="@color/base_color_dark"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"/>

        </LinearLayout>

</LinearLayout>