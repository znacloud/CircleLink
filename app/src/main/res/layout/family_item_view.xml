<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">


    <com.makeramen.RoundedImageView
        android:id="@+id/head_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@null"
        android:src="@drawable/ooopsy_bear"
        android:scaleType="fitXY"
        app:riv_oval="true"
        app:riv_border_color="@color/base_color"
        app:riv_border_width="4dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/head_img"
        android:gravity="center"
        android:text="nickname"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/base_color_dark"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/extra_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@id/head_img"
        android:layout_alignTop="@id/head_img"
        android:visibility="gone"/>

</RelativeLayout>
