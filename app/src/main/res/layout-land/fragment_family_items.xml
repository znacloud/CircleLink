<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/reveal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorAccent"
        android:elevation="8dp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="?android:colorPrimary"
        android:elevation="2dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/family_backimg"
            android:scaleType="fitXY"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="4dp"
            android:text="Families"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_view"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/family_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:columnCount="@integer/family_columns">

            <com.android.zna.fivecircles.view.FamilyItemView
                android:layout_margin="8dp"
                app:displayText="sample1"
                />

            <com.android.zna.fivecircles.view.FamilyItemView
                android:layout_margin="8dp"
                app:displayText="sample2"
                app:headImageSrc="@drawable/cheer_bear"
                />
            <com.android.zna.fivecircles.view.FamilyItemView
                android:layout_margin="8dp"
                app:displayText="sample3"
                app:headImageSrc="@drawable/funshine_bear"
                />
            <com.android.zna.fivecircles.view.FamilyItemView
                android:layout_margin="8dp"
                app:displayText="sample4"
                app:headImageSrc="@drawable/grumpy_bear"
                />


        </GridLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/fab_button"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/header_view"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-28dp"
        android:background="@drawable/ripple_round"
        android:elevation="10dp"
        android:src="@drawable/ic_person_add"
        android:stateListAnimator="@anim/fab_anim"
        android:transitionName="fab"
        />

</RelativeLayout>